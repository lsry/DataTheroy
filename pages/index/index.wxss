  border: #000;
}  

.tit{
   justify-content: center; 
   margin-right: 1rem;  
   margin-left: 1rem;  
   margin-bottom: 0.5rem;
   text-align: center;
   font-size: 50rpx;
   height:2rem;
}

.tr {  
  display: flex;  
  width: 100%;  
  justify-content: center;  
  height: 2rem;  
  align-items: center;  
}  
.td {  
    width:30%;  
    justify-content: center;  
    display: flex;  
    text-align: center;  
    border-right: 2px solid #ddd;  
    height: 100%;  
}  
.td-1 {  
    width:30%;  
    justify-content: center;  
    display: flex;  
    text-align: center;  
    border-right: 2px solid #ddd;  
    height: 100%;  
}  
.td-2 {  
    width:50%;  
    justify-content: center;  
    border-right: 2px solid #ddd;  
    text-align: left;  
    height: 100%;  
    max-width: 100%;  
}  

.td-3 {  
    width:20%;  
    justify-content: center;  
    text-align: center;  
    height: 100%;  
    max-width: 100%;  
}  

.bg-w{  
  background: #afb4db;  
  
}  
.bg-g{  
  background: #E6F3F9;  
}  
.bg-g2{  
  background: rgb(248, 248, 248);  
}  
.th {  
  width: 30%;  
  justify-content: center;  
